# Copy this file to .env and fill in your actual values
# .env is gitignored and used by wrangler dev for local development

OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
TMDB_API_KEY=your-tmdb-api-key-here

# Optional ERC-8004 configuration
MOVIE_AGENT_ADDRESS=0x...
MOVIE_AGENT_OPERATOR_KEY=0x...
ERC8004_CHAIN_HEX=0xaa36a7
AP2_RATE=0.001
AP2_TOKEN=ETH

# Agent identity (for local dev, use simple name; for production, use ENS name)
AGENT_NAME=movie-agent
# Or for production: AGENT_NAME=movieagent.8004-agent.eth
